<% team = @team || @team %>
<% context ||= team %>
<% collection ||= :first_levels %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% with_attribute_settings object: first_level do %>
  <tr data-id="<%= first_level.id %>">
    <%= render "shared/tables/checkbox", object: first_level %>
    <td><%= render 'shared/attributes/text', attribute: :data, url: [:account, first_level] %></td>
    <%# ðŸš… super scaffolding will insert new fields above this line. %>
    <td><%= render 'shared/attributes/date_and_time', attribute: :created_at %></td>
    <td class="buttons">
      <% unless hide_actions %>
        <% if can? :edit, first_level %>
          <%= link_to t('.buttons.shorthand.edit'), [:edit, :account, first_level], class: 'button-secondary button-smaller' %>
        <% end %>
        <% if can? :destroy, first_level %>
          <%= button_to t('.buttons.shorthand.destroy'), [:account, first_level], method: :delete, data: { confirm: t('.buttons.confirmations.destroy', model_locales(first_level)) }, class: 'button-secondary button-smaller' %>
        <% end %>
        <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
      <% end %>
    </td>
  </tr>
<% end %>
